{% extends 'base.html.twig' %}

{% block title %}Pokemon{% endblock %}

{% block body %}
    <h1>Nouveau Pokemon : {{ pokemon.nom }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Nom</th>
            <th>Sexe</th>
            <th>Xp</th>
            <th>Niveau</th>
            <th>PrixVente</th>
            <th>Derniere Chasse</th>
            <th>Dernier Entrainement</th>

        </tr>
        <tr>
            <td>{{ pokemon.nom }}</td>
            <td>{{ pokemon.sexe }}</td>
            <td>{{ pokemon.xp }}</td>
            <td>{{ pokemon.niveau }}</td>
            <td>{{ pokemon.prixVente }}</td>
            {% if pokemon.derniereChasse %}
                <td>{{ pokemon.derniereChasse|format_datetime('full', 'full', locale='fr') }}</td>
            {% endif %}
            {% if pokemon.dernierEntrainement %}
                <td>{{ pokemon.dernierEntrainement|format_datetime('full', 'full', locale='fr') }}</td>
            {% endif %}
        </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="md-6">
            <button type="button" onclick="location.href='{{ path('app_my_pokemon') }}'" class="btn btn-primary btn-lg">Retour à Mes Pokemons</button>
        </div>
        <div class="md-6">
            <button type="button" onclick="location.href='{{ path('app_capture') }}'" class="btn btn-primary btn-lg">Retour à la capture</button>
        </div>
    </div>


{% endblock %}
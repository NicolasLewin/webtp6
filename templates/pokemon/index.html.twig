{% extends 'base.html.twig' %}

{% block title %}Pokemon index{% endblock %}

{% block body %}
    <h1>Pokemon index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idp</th>
                <th>Nom</th>
                <th>Sexe</th>
                <th>Xp</th>
                <th>Niveau</th>
                <th>PrixVente</th>
                <th>Dresseurid</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pokemon in pokemon %}
            <tr>
                <td>{{ pokemon.idp }}</td>
                <td>{{ pokemon.nom }}</td>
                <td>{{ pokemon.sexe }}</td>
                <td>{{ pokemon.xp }}</td>
                <td>{{ pokemon.niveau }}</td>
                <td>{{ pokemon.prixVente }}</td>
                <td>{{ pokemon.dresseurid }}</td>
                <td>
                    <div class="row">
                        <div class="md-6">
                            <button type="button" onclick="location.href='{{ path('pokemon_show', {'idp': pokemon.idp}) }}'" class="btn btn-primary btn-lg" style="color:#212529">Detail</button>
                        </div>
                        <div class="md-6">
                            <button type="button" onclick="location.href='{{ path('pokemon_edit', {'idp': pokemon.idp}) }}'" class="btn btn-primary btn-lg" style="color:#212529">Editer</button>
                        </div>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pokemon_new') }}">Create new</a>
{% endblock %}
